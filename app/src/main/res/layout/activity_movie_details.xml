<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:padding="6dp"
        app:cardCornerRadius="25dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/movie_detail_image"
                android:layout_width="200dp"
                android:layout_height="250dp" />

            <TextView
                android:id="@+id/title_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/movie_detail_image"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Title"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/favorite_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_movie_detail"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:layout_toEndOf="@+id/movie_detail_image"
                android:src="@drawable/ic_favorite_border"
                android:background="?android:selectableItemBackground" />

            <ImageButton
                android:id="@+id/star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/favorite_btn"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/favorite_btn"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_star_outline" />

            <ImageButton
                android:id="@+id/star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/favorite_btn"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/star_1"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_star_outline" />

            <ImageButton
                android:id="@+id/star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/favorite_btn"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/star_2"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_star_outline" />

            <ImageButton
                android:id="@+id/star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/favorite_btn"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/star_3"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_star_outline" />

            <ImageButton
                android:id="@+id/star_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/favorite_btn"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/star_4"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_star_outline" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>


